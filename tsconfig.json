{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strictFunctionTypes": true,
    "lib": ["es2016"],
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true
  },
  "include": ["./src/ts/**/*", "./test/**/*"],
  "exclude": ["./node_modules"]
}
